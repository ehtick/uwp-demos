<layout:SampleLayout x:Class="BI.PivotClient.PivotClientCustomization"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:syncfusion="using:Syncfusion.UI.Xaml.PivotClient"
                     xmlns:notification="using:Syncfusion.UI.Xaml.Controls.Notification"
                     xmlns:converter="using:BI.PivotClient.PivotClientSamples.Converters"
                     xmlns:layout="using:Common" Header="PivotClient" mc:Ignorable="d">

    <UserControl.Resources>
        <converter:BooleanVisibilityConverter x:Key="VisibleToBoolConverter"/>
    </UserControl.Resources>

    <layout:SampleLayout.Sample>
        <ContentControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <Grid x:ConnectionId='1' x:Name="RootLayout">
                <syncfusion:SfPivotClient x:ConnectionId='2' x:Name="PivotClient1" PagerButtonVisibility="Collapsed" FlowDirection="LeftToRight"/>
                <Grid Height="482" Width="900" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <notification:SfBusyIndicator x:ConnectionId='3' x:Name="busyIndicator" Foreground="#1685D4" AnimationType="SingleCircle" IsBusy="False" ViewboxHeight="80" ViewboxWidth="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </ContentControl>
    </layout:SampleLayout.Sample>

    <layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Width="300">
                <StackPanel Margin="10 7">
                    <TextBlock Text="Data Source" Margin="10 7" FontWeight="SemiBold" FontSize="13"/>
                    <RadioButton x:ConnectionId='11' x:Name="rdBtn_Olap" Content="OLAP" Margin="10 7" FontSize="12"                             />
                    <RadioButton x:ConnectionId='12' x:Name="rdBtn_Relational" Content="Relational" IsChecked="True" FontSize="12" Margin="10 7"                                   />
                </StackPanel>

                <StackPanel Margin="10 7" Orientation="Vertical" Background="Transparent" >
                    <TextBlock Margin="10 7" Text="Pivot Client" FontSize="13" FontWeight="SemiBold"/>
                    <CheckBox x:ConnectionId='4' Name="ShowLevelTypeAll" Margin="10 7" Content="Show All Members" FontSize="13" IsEnabled="{Binding IsChecked, ElementName=rdBtn_Olap, Mode=TwoWay}"                               />
                    <CheckBox x:ConnectionId='5' x:Name="chk_AllowMultiFunctionalSortFilter" Margin="10 7" FontSize="13" Content="Excel-like Filtering and Sorting"
                              IsEnabled="{Binding IsChecked, ElementName=rdBtn_Relational, Mode=TwoWay}"/>
                    <TextBlock Margin="5" Text="Pivot Grid" FontSize="13" FontWeight="SemiBold"/>
                    <CheckBox x:ConnectionId='6' Name="ShowGrandTotal" Margin="10 7" Content="Show Grand Total" FontSize="13"                                                                 IsChecked="True"/>
                    <CheckBox x:ConnectionId='7' Name="ShowValueCellToolTip" Margin="10 7" FontSize="13" Content="Show Value Cell ToolTip" IsChecked="{Binding ElementName=PivotClient1, Path=PivotGrid.ShowValueCellToolTip,Mode=TwoWay}"/>
                    <CheckBox x:ConnectionId='8' Name="ShowHyperlink" Margin="10 7" FontSize="13" Content="Show Hyperlink" IsChecked="{Binding ElementName=PivotClient1,Path=PivotGrid.ValueCellStyle.IsHyperlinkCell,Mode=TwoWay}"/>
                    <CheckBox x:ConnectionId='9' Name="FreezeHeaders" Margin="10 7" FontSize="13" Content="Freeze Headers" IsChecked="{Binding ElementName=PivotClient1,Path=PivotGrid.FreezeHeaders,Mode=TwoWay}"/>

                    <TextBlock Margin="10 7" Text="Pivot Chart" FontSize="13" FontWeight="SemiBold"/>
                    <CheckBox x:ConnectionId='10' Name="ShowLegend" Margin="10 7" Content="Show Legend" FontSize="13" IsChecked="{Binding ElementName=PivotClient1,Converter={StaticResource VisibleToBoolConverter},Path=PivotChart.Legend.Visibility,Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </layout:SampleLayout.Setting>

</layout:SampleLayout>

