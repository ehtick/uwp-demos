<common:SampleLayout
    x:Class="Syncfusion.SampleBrowser.UWP.SfChart.FunnelAndPyramidChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Syncfusion.SampleBrowser.UWP.SfChart"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Common"
    xmlns:chart="using:Syncfusion.UI.Xaml.Charts"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <common:SampleLayout.Sample>
        <ContentControl Margin="50,50,50,25" >
            <Grid x:ConnectionId='1' x:Name="MainGrid" HorizontalAlignment="Left" VerticalAlignment="Top" >
                
                <Grid.DataContext>
                    <local:PieChartViewModel/>
                </Grid.DataContext>

                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <chart:SfChart x:ConnectionId='2' x:Name="Accumulation_charts" AreaBorderThickness="0" Grid.RowSpan="2" VerticalAlignment="Center"
                        Header="Agriculture Expenses Comparison" HorizontalAlignment="Center">

                    <chart:SfChart.Legend>
                        <chart:ChartLegend x:ConnectionId='4' x:Name="ChartLegend1"
                                           DockPosition="Right" BorderThickness="1" />
                    </chart:SfChart.Legend>
                </chart:SfChart>

                <ComboBox x:ConnectionId='3' x:Name="ChartTypes" Width="200" Grid.Row="0" SelectedIndex="0" 
                      HorizontalAlignment="Right"                                                >
                    <ComboBoxItem>Funnel</ComboBoxItem>
                    <ComboBoxItem>Pyramid</ComboBoxItem>
                </ComboBox>
            </Grid>
        </ContentControl>
    </common:SampleLayout.Sample>
</common:SampleLayout>

