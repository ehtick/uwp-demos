<Page
    x:Class="SfRibbon.Ribbon.RibbonSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:SfRibbon.Ribbon" xmlns:syncfusion="using:Syncfusion.UI.Xaml.Controls.SfRibbon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Margin="-11,0,-11,0">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="ContentBackgroundColor" Color="#FFF3F3F3"/>
            <SolidColorBrush x:Key="ContentForegroundColor" Color="#FF6C2F68"/>
        </Grid.Resources>
        <syncfusion:SfRibbon x:ConnectionId='1' x:Name="mainribbon" Margin="0,0,0,20" QATVisibility="Visible" AccentBrush="Tomato" Title="Syncfusion SfRibbon Demo" >
            <syncfusion:SfRibbonTab Caption="Home" Header="Home" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonComboBox SelectedIndex="2" ItemsSource="{Binding InstalledFonts}" Width="228" ToolTip="Fonts">
                        <syncfusion:SfRibbonComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonComboBox.ItemTemplate>
                    </syncfusion:SfRibbonComboBox>
                    <syncfusion:SfRibbonComboBox x:ConnectionId='58' SelectedIndex="9" ItemsSource="{Binding FontsSize}" Width="68"                                                     >
                        <syncfusion:SfRibbonComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonComboBox.ItemTemplate>
                    </syncfusion:SfRibbonComboBox>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='59' syncfusion:RibbonCommandManager.SynchronizedItem="Bold"  Foreground="DimGray" x:Name="boldbutton"  FontIcon="B" FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Bold" />
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='60' syncfusion:RibbonCommandManager.SynchronizedItem="Italic" Foreground="DimGray" x:Name="italicbutton"  FontIcon="I"  FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Italic"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='61' syncfusion:RibbonCommandManager.SynchronizedItem="Underline" Foreground="DimGray" x:Name="underlinebutton" FontIcon="U"  FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Underline"/>
                    <syncfusion:SfRibbonGallery Label="Font colors"   Foreground="DimGray" SizeMode="ExtraSmall" Header="Font Colors" FontIconSize="20" FontIcon="N" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                        <syncfusion:SfRibbonGalleryGroup Header="Theme Colors" Foreground="Black" FontWeight="Normal" ItemsSource="{Binding FontColors}">
                            <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                                <DataTemplate>
                                    <Button x:ConnectionId='66' Background="{Binding}" Margin="3"   Width="40" Height="40"                        />
                                </DataTemplate>
                            </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                        </syncfusion:SfRibbonGalleryGroup>
                    </syncfusion:SfRibbonGallery>
                    <syncfusion:SfDropDownButton x:ConnectionId='62' x:Name="fontdropdown"  SizeMode="Large" Label="Font"  Header="Font" FontWeight="Light" FontIcon="S" FontIconSize="20" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                        <StackPanel Orientation="Horizontal">
                            <syncfusion:SfRibbonButton x:ConnectionId='63' SizeMode="ExtraSmall"  Foreground="DimGray"  x:Name="strikebutton" FontIcon="S" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Strike"/>
                            <syncfusion:SfRibbonButton x:ConnectionId='64' SizeMode="ExtraSmall"  Foreground="DimGray"  x:Name="decoratebutton" FontIcon="a" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="TextDecor"/>
                            <syncfusion:SfRibbonButton x:ConnectionId='65' SizeMode="ExtraSmall"  Foreground="DimGray" x:Name="textdeletebutton" FontIcon="e" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Delete"/>
                        </StackPanel>
                    </syncfusion:SfDropDownButton>
                </syncfusion:SfRibbonBar>
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='52' syncfusion:RibbonCommandManager.SynchronizedItem="Justify" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="justifybutton" Foreground="BlueViolet" FontIcon="j" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Justify"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='53' syncfusion:RibbonCommandManager.SynchronizedItem="Left" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="leftalignbuton" Foreground="BlueViolet" FontIcon="l" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Left"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='54' syncfusion:RibbonCommandManager.SynchronizedItem="Center" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="centrealignbutton" Foreground="BlueViolet" FontIcon="c" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Center"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='55' syncfusion:RibbonCommandManager.SynchronizedItem="Right" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="rightalignbutton" Foreground="BlueViolet" FontIcon="r" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Right"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='56'   FontIconSize="20"  x:Name="bulletbutton" Foreground="DarkViolet" FontIcon="h" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Bullets"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='57'  FontIconSize="20"  x:Name="numberbutton" Foreground="DarkViolet" FontIcon="i" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Number"/>
                </syncfusion:SfRibbonBar>
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton x:ConnectionId='48' SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="cutbutton"   FontIcon="7" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Cut"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='49' SizeMode="ExtraSmall" FontIconSize="20"   x:Name="copybutton"  FontIcon="8"  FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Copy"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='50' SizeMode="ExtraSmall"  FontIconSize="20" x:Name="pastelinebutton" FontIcon="9"  FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Paste"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='51' SizeMode="ExtraSmall"  FontIconSize="20" x:Name="formatbutton" FontIcon="0" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepSkyBlue" Command="{Binding ExcuteCommand}" CommandParameter="Format"/>
                </syncfusion:SfRibbonBar>
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfDropDownButton x:ConnectionId='41' SizeMode="Large" Label="Find / Replace" Width="200" FontWeight="Light" FontIconSize="20" x:Name="findreplacebutton" FontIcon="m"   Foreground="DarkOrange" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Find what:" Foreground="Black" Margin="20,0,20,5" FontWeight="Light" FontSize="16"/>
                            <TextBox x:ConnectionId='43' x:Name="findtextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="280" FontSize="16"  FontWeight="Light"                                      />
                            <TextBlock Text="Replaec with:" Foreground="Black" Margin="20,20,20,5" FontWeight="Light" FontSize="16"/>
                            <TextBox x:ConnectionId='44' x:Name="replacetextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="280" FontSize="16"   FontWeight="Light"                                      />
                            <StackPanel Margin="15,15,15,15" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:ConnectionId='45' x:Name="findbutton" IsEnabled="False" Content="Find" Foreground="Black" HorizontalAlignment="Right" Width="90" Margin="9" FontSize="16" FontWeight="Light"                         />
                                <Button x:ConnectionId='46' x:Name="replacebutton" IsEnabled="False" Content="Replace" Foreground="Black" HorizontalAlignment="Right" Width="90" Margin="9" FontSize="16" FontWeight="Light"                            />
                                <Button x:ConnectionId='47' x:Name="replaceallbutton" IsEnabled="False" Content="Replace All" Foreground="Black" HorizontalAlignment="Right" Width="90" Margin="9" FontSize="16" FontWeight="Light"                            />
                            </StackPanel>
                        </StackPanel>
                    </syncfusion:SfDropDownButton>
                    <syncfusion:SfDropDownButton x:ConnectionId='42' Header="Tags" Label="Tags" SizeMode="Large" FontWeight="Light"  Foreground="Black"  x:Name="tagButton">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="15,10" Text="E" FontSize="22" Foreground="Blue" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                    <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Important" FontSize="18"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="15,10" Text="Q" FontSize="22" Foreground="RosyBrown" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                    <TextBlock Margin="5,10" FontWeight="Light" Grid.Column="1" Foreground="Black"  Text="Question" FontSize="18"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="15,10" Text="W" FontSize="22" Foreground="Red" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                    <TextBlock Margin="5,10" FontWeight="Light" Grid.Column="1" Foreground="Black"  Text="Priority" FontSize="18"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="15,10" Text="A" FontSize="22" Foreground="Brown" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                    <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Address" FontSize="18"/>
                                </Grid>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Margin="15,10" Text="P" FontSize="22" Foreground="DarkMagenta" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                    <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Phone Number" FontSize="18"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </syncfusion:SfDropDownButton>
                </syncfusion:SfRibbonBar>
            </syncfusion:SfRibbonTab>
            <syncfusion:SfRibbonTab Caption="Insert" Header="Insert"  Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton x:ConnectionId='35'  SizeMode="Large" Width="105" FontWeight="Light" Label="Table"  FontIconSize="18" x:Name="tablebutton" FontIcon="T"  Foreground="BlueViolet" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert Table"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='36' SizeMode="Large" Width="90" FontWeight="Light" Label="File"  FontIconSize="18" x:Name="filebutton" FontIcon="f"  Foreground="Plum" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert File"/>
                    <syncfusion:SfRibbonMenu SizeMode="Large" Width="135" FontWeight="Light" Label="Picture"  FontIconSize="18" syncfusion:RibbonCommandManager.SynchronizedItem="Pictures" Header="Insert Picture" FontIcon="p"  Foreground="DarkSlateBlue" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert Picture" >
                        <syncfusion:SfRibbonMenu.ToolTip>
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock Text="Inserts a Picture" FontSize="15" Margin="0 5 0 5"/>
                                <TextBlock Margin="0 5 0 15" Text="Inserts a Picture to your presentation."/>
                            </StackPanel>
                        </syncfusion:SfRibbonMenu.ToolTip>
                        <syncfusion:SfRibbonMenuItem >
                            <syncfusion:SfRibbonMenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/1.png" Margin="5"/>
                                    <TextBlock Text="Library" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Header>
                            <syncfusion:SfRibbonMenuItem.Content>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="15 10">
                                        <TextBlock Text="Library" HorizontalAlignment="Left"></TextBlock>
                                        <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="90 0 0 0" />
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding Pictures}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                    <Image Height="45" Width="45" Source="{Binding}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                                </VariableSizedWrapGrid>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Content>
                        </syncfusion:SfRibbonMenuItem>
                        <syncfusion:SfRibbonMenuItem >
                            <syncfusion:SfRibbonMenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/3.png" Margin="5"/>
                                    <TextBlock Text="Camera Roll" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Header>
                            <syncfusion:SfRibbonMenuItem.Content>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Margin="15 10">
                                        <TextBlock Text="Camera Roll" HorizontalAlignment="Left"></TextBlock>
                                        <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="90 0 0 0"/>
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding Pictures}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                    <Image Height="45" Width="45" Source="{Binding}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                                </VariableSizedWrapGrid>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Content>
                        </syncfusion:SfRibbonMenuItem>
                        <syncfusion:SfRibbonMenuItem >
                            <syncfusion:SfRibbonMenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/2.png" Margin="5"/>
                                    <TextBlock Text="Online pictures" VerticalAlignment="Center" Margin="5 0 0 0"/>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Header>
                            <syncfusion:SfRibbonMenuItem.Content>
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal" Margin="15 10">
                                        <TextBlock Text="Online pictures" HorizontalAlignment="Left"></TextBlock>
                                        <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="76 0 0 0"/>
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding Pictures}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                    <Image Height="45" Width="45" Source="{Binding}"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                                </VariableSizedWrapGrid>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </syncfusion:SfRibbonMenuItem.Content>
                        </syncfusion:SfRibbonMenuItem>
                    </syncfusion:SfRibbonMenu>

                    <syncfusion:SfDropDownButton x:ConnectionId='37' SizeMode="Large" Width="95" FontWeight="Light" Label="Link"  FontIconSize="18" x:Name="linkbutton" FontIcon="H"   Foreground="DarkOrange" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Text to display" Foreground="Black" Margin="20,0,20,5" FontWeight="Light" FontSize="16"/>
                            <TextBox x:ConnectionId='38' x:Name="displaytextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="280" FontSize="16"  FontWeight="Light"                                         />
                            <TextBlock Text="Address" Foreground="Black" Margin="20,20,20,5" FontWeight="Light" FontSize="16"/>
                            <TextBox x:ConnectionId='39' x:Name="addresstextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="280" FontSize="16"   FontWeight="Light"                                         />
                            <Button x:ConnectionId='40' x:Name="linknsertbutton" IsEnabled="False" Content="Insert" Foreground="Black" HorizontalAlignment="Right" Width="90" Margin="20,15,20,15" FontSize="16" FontWeight="Light"  Command="{Binding ExcuteCommand}" CommandParameter="Link" />
                        </StackPanel>
                    </syncfusion:SfDropDownButton>
                    <syncfusion:SfRibbonGallery SizeMode="Large" Width="135" FontWeight="Light" Label="Shapes" Header="Shapes" FontIconSize="18" FontIcon="." FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DarkRed" >
                        <syncfusion:SfRibbonGalleryGroup Header="Cards" Foreground="DarkGreen" ItemsSource="hbjz">
                            <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                                <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes" Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                                </DataTemplate>
                            </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                        </syncfusion:SfRibbonGalleryGroup>
                        <syncfusion:SfRibbonGalleryGroup Header="Arrows" ItemsSource="lmnopqrstuvw" Foreground="DarkBlue">
                            <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                                <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes"  Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                                </DataTemplate>
                            </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                        </syncfusion:SfRibbonGalleryGroup>
                        <syncfusion:SfRibbonGalleryGroup Header="Others" Foreground="DeepPink" ItemsSource="ABDEFGHIKLMNOPQRSTUVWXYZ">
                            <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                                <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes" Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                                </DataTemplate>
                            </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                        </syncfusion:SfRibbonGalleryGroup>
                    </syncfusion:SfRibbonGallery>
                </syncfusion:SfRibbonBar>
            </syncfusion:SfRibbonTab>
            <syncfusion:SfRibbonTab Caption="Draw" Header="Draw" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton x:ConnectionId='29'  SizeMode="ExtraSmall" FontIconSize="20" x:Name="cursorbutton" FontIcon="x"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Cursor"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='30'  SizeMode="ExtraSmall" FontIconSize="20" x:Name="selectionbutton" FontIcon="y"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Eraser "/>
                    <syncfusion:SfRibbonButton x:ConnectionId='31'  SizeMode="ExtraSmall" FontIconSize="20" x:Name="eraserbutton" FontIcon="z"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Selection"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='32'  SizeMode="ExtraSmall" FontIconSize="20" x:Name="pencilbutton" FontIcon="4"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Pencil"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='33'  SizeMode="ExtraSmall" FontIconSize="20" x:Name="budgetbutton" FontIcon="3"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Budget"/>
                    <syncfusion:SfRibbonButton x:ConnectionId='34' SizeMode="ExtraSmall" FontIconSize="20" x:Name="brushbutton" FontIcon="1"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Brush"/>

                </syncfusion:SfRibbonBar>
                <syncfusion:SfRibbonBar>
