<Page
    x:Class="SfRibbon.Ribbon.CustomBackStagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SfRibbon.Ribbon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  xmlns:syncfusion="using:Syncfusion.UI.Xaml.Controls.SfRibbon"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
        <Storyboard x:ConnectionId='1' x:Name="sbAnimateImage">
                <DoubleAnimation Storyboard.TargetName="contentpanel" Storyboard.TargetProperty="(Grid.Opacity)" To="1" Duration="0:0:1" />
               </Storyboard>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <syncfusion:SfRibbon x:ConnectionId='2'   x:Name="mainribbon"  AccentBrush="DimGray" >
            <syncfusion:SfRibbonTab Caption="Edit" SelectedForeground="Black">
                <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='14' syncfusion:RibbonCommandManager.SynchronizedItem="Bold"  Foreground="DimGray" x:Name="boldbutton" Margin="5,0,0,0"  FontIcon="B" FontIconFontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Bold" />
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='15' syncfusion:RibbonCommandManager.SynchronizedItem="Italic" Foreground="DimGray" x:Name="italicbutton"  FontIcon="I"  FontIconFontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Italic"/>
                    <syncfusion:SfRibbonToggleButton x:ConnectionId='16' syncfusion:RibbonCommandManager.SynchronizedItem="Underline" Foreground="DimGray" x:Name="underlinebutton" FontIcon="U"  FontIconFontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Underline"/>
                </syncfusion:SfRibbonBar>
            </syncfusion:SfRibbonTab>
            <syncfusion:SfRibbonTab Caption="Insert" SelectedForeground="Black" />
            <syncfusion:SfRibbonTab Caption="Preview" SelectedForeground="Black" />
            <syncfusion:SfRibbonTab Caption="Publish" SelectedForeground="Black" />
            <syncfusion:SfRibbon.BackStageHeader>
                <Button x:ConnectionId='17' Content="A" Foreground="White" Margin="-10" Height="42" Width="40" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"                       >

                </Button>
            </syncfusion:SfRibbon.BackStageHeader>
        </syncfusion:SfRibbon>
        <Grid x:ConnectionId='3' Grid.Row="1" x:Name="contentgrid">
            <Button x:ConnectionId='4' VerticalAlignment="Center" HorizontalAlignment="Left" Margin="-30,0,0,0"  x:Name="flyoutbutton">
                <Button.Flyout>

                    <Flyout Placement="Right" >
                        <Flyout.FlyoutPresenterStyle>
                            <Style TargetType= "FlyoutPresenter" >
                                <Setter Property = "Padding" Value = "0" />
                                <Setter Property = "Margin" Value= "0" />
                            </Style>
                        </Flyout.FlyoutPresenterStyle>

                        <Grid x:ConnectionId='8'  Background="DimGray" x:Name="flyoutcontent">
                            <Grid >
                                <Grid Background="#99000000">
                                    <Grid Margin="0,15,0,0">
                                        <StackPanel Orientation="Vertical">
                                            <TextBox Height="35" Margin="20" FontSize="18"  Background="#99000000" BorderBrush="White"></TextBox>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="B" Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                <TextBlock Text="Recent Notes" Margin="-7,0" FontSize="15"  Foreground="White"/>
                                            </StackPanel>
                                            <Border BorderThickness="1" Margin="-5,15" Height="320" BorderBrush="White">
                                                <StackPanel Orientation="Vertical" Margin="5">
                                                    <TextBlock FontSize="20" Text="Notebooks" Margin="20,0" Foreground="LightGray"/>
                                                    <Button x:ConnectionId='9'  Content="?  Carl_9911 Notebook" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" Foreground="White" FontSize="15" Margin="0,10,0,0" Height="45" Width="{Binding ElementName=flyoutcontent, Path=ActualWidth}"                       ></Button>
                                                    <Button x:ConnectionId='10' Content="?  James_71 Notebook" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" Foreground="White" FontSize="15"  Height="45" Width="{Binding ElementName=flyoutcontent, Path=ActualWidth}"                       ></Button>
                                                    <Button x:ConnectionId='11' Content="?  Peaches_1 Notebook" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" Foreground="White" FontSize="15"  Height="45" Width="{Binding ElementName=flyoutcontent, Path=ActualWidth}"                       ></Button>
                                                    <Button x:ConnectionId='12' Content="?  Linda_511 Notebook" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" Foreground="White" FontSize="15"  Height="45" Width="{Binding ElementName=flyoutcontent, Path=ActualWidth}"                       ></Button>
                                                    <Button x:ConnectionId='13' Content="?  Mark_411 Notebook" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu" Foreground="White" FontSize="15"  Height="45" Width="{Binding ElementName=flyoutcontent, Path=ActualWidth}"                       ></Button>
                                                    <TextBlock FontSize="15" Text="More Notebooks..." Margin="20,10" Foreground="LightGray"/>

                                                </StackPanel>
                                            </Border>
                                            <StackPanel Orientation="Vertical" Margin="5,0">
                                                <StackPanel Orientation="Horizontal" Margin="0,10">
                                                    <TextBlock Text="!" Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                    <TextBlock Text="Print" Margin="-5,2" FontSize="15"  Foreground="White"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,10">
                                                    <TextBlock Text="." Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                    <TextBlock Text="Feedback" Margin="-5,2" FontSize="15"  Foreground="White"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,10">
                                                    <TextBlock Text="," Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                    <TextBlock Text="Featured Apps" Margin="-5,2" FontSize="15"  Foreground="White"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,10">
                                                    <TextBlock Text="%" Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                    <TextBlock Text="History" Margin="-5,2" FontSize="15"  Foreground="White"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,10">
                                                    <TextBlock Text="*" Margin="20,0" FontSize="22" Foreground="White" FontFamily="ms-appx:///Syncfusion.SampleBrowser.UWP.Layout/Ribbon/FontIcons/CustomBackMenu.ttf#CustomBackMenu"/>
                                                    <TextBlock Text="Settings" Margin="-5,2" FontSize="15"  Foreground="White"/>
                                                </StackPanel>
                                            </StackPanel>


                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>
            <Grid x:ConnectionId='5'  Background="White"  x:Name="contentpanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='6'  Text="About Me" x:Name="contenttitle"  FontSize="30" Margin="15" Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}" />
                <RichEditBox x:ConnectionId='7' Margin="5,60,0,0" Background="White" FontSize="18" x:Name="RichTextContent"  BorderThickness="0" >
                </RichEditBox>
                <Image Margin="5,10,0,0" Grid.Column="1" Source="{Binding SelectedItem}" VerticalAlignment="Center"  HorizontalAlignment="Center"/>

            </Grid>
        </Grid>
    </Grid>
</Page>

