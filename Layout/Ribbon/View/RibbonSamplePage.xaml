<Page
    x:Class="SfRibbon.Ribbon.RibbonSamplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:SfRibbon.Ribbon" xmlns:syncfusion="using:Syncfusion.UI.Xaml.Controls.SfRibbon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="ContentBackgroundColor" Color="#FFF3F3F3"/>
            <SolidColorBrush x:Key="ContentForegroundColor" Color="#FF6C2F68"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    <syncfusion:SfRibbon x:Name="mainribbon" QATVisibility="Visible" AccentBrush="Tomato" Title="Syncfusion SfRibbon Demo" >
        <syncfusion:SfRibbonTab Caption="Home" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonComboBox  ItemsSource="{Binding InstalledFonts}" Width="110" ToolTip="Fonts">
                        <syncfusion:SfRibbonComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonComboBox.ItemTemplate>
                    </syncfusion:SfRibbonComboBox>
                    <syncfusion:SfRibbonComboBox  ItemsSource="{Binding FontsSize}" SelectionChanged="SfRibbonComboBox_SelectionChanged">
                        <syncfusion:SfRibbonComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonComboBox.ItemTemplate>
                    </syncfusion:SfRibbonComboBox>
                    <syncfusion:SfRibbonToggleButton syncfusion:RibbonCommandManager.SynchronizedItem="Bold"  Foreground="DimGray" x:Name="boldbutton" Margin="5,0,0,0"  FontIcon="B" FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Bold" />
                    <syncfusion:SfRibbonToggleButton syncfusion:RibbonCommandManager.SynchronizedItem="Italic" Foreground="DimGray" x:Name="italicbutton"  FontIcon="I"  FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Italic"/>
                    <syncfusion:SfRibbonToggleButton syncfusion:RibbonCommandManager.SynchronizedItem="Underline" Foreground="DimGray" x:Name="underlinebutton" FontIcon="U"  FontIconFontFamily="ms-appx:///Ribbon/ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Underline"/>
                    <syncfusion:SfRibbonGallery  Foreground="DimGray" SizeMode="ExtraSmall" Header="Font Colors" FontIconSize="20" FontIcon="N" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  >
                    <syncfusion:SfRibbonGalleryGroup Header="Theme Colors" Foreground="Black" FontWeight="Normal" ItemsSource="{Binding FontColors}">
                        <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                            <DataTemplate>
                                    <Button Background="{Binding}" Margin="3"   Width="40" Height="40" Click="Button_Click_2" />
                            </DataTemplate>
                        </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                    </syncfusion:SfRibbonGalleryGroup>
                </syncfusion:SfRibbonGallery>
                <syncfusion:SfDropDownButton x:Name="fontdropdown" SizeMode="Large" Header="Font" FontWeight="Light" FontIconSize="15" FontIcon="q" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" >
                    <StackPanel Orientation="Horizontal">
                            <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  Foreground="DimGray"  x:Name="strikebutton" FontIcon="S" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Strike"/>
                            <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  Foreground="DimGray"  x:Name="decoratebutton" FontIcon="a" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="TextDecor"/>
                            <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  Foreground="DimGray" x:Name="textdeletebutton" FontIcon="e" FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Delete"/>
                    </StackPanel>
                </syncfusion:SfDropDownButton>
            </syncfusion:SfRibbonBar>
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonToggleButton   FontIconSize="20"  x:Name="bulletbutton" Foreground="DarkViolet" FontIcon="h" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Bullets"/>
                    <syncfusion:SfRibbonToggleButton  FontIconSize="20"  x:Name="numberbutton" Foreground="DarkViolet" FontIcon="i" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Number"/>
                <syncfusion:SfDropDownButton x:Name="paradropdown" SizeMode="Large" Header="Paragraph" FontWeight="Light" FontIconSize="15" FontIcon="q" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" >
                    <StackPanel Orientation="Horizontal">
                            <syncfusion:SfRibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Justify" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="justifybutton" Foreground="BlueViolet" FontIcon="j" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Justify"/>
                            <syncfusion:SfRibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Left" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="leftalignbuton" Foreground="BlueViolet" FontIcon="l" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Left"/>
                            <syncfusion:SfRibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Center" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="centrealignbutton" Foreground="BlueViolet" FontIcon="c" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Center"/>
                            <syncfusion:SfRibbonButton syncfusion:RibbonCommandManager.SynchronizedItem="Right" SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="rightalignbutton" Foreground="BlueViolet" FontIcon="r" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Right"/>
                    </StackPanel>
                </syncfusion:SfDropDownButton>
            </syncfusion:SfRibbonBar>
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="cutbutton"   FontIcon="7" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Cut"/>
                    <syncfusion:SfRibbonButton SizeMode="ExtraSmall" FontIconSize="20"   x:Name="copybutton"  FontIcon="8"  FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Copy"/>
                    <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  FontIconSize="20" x:Name="pastelinebutton" FontIcon="9"  FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepPink" Command="{Binding ExcuteCommand}" CommandParameter="Paste"/>
                    <syncfusion:SfRibbonButton SizeMode="ExtraSmall"  FontIconSize="20" x:Name="formatbutton" FontIcon="0" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DeepSkyBlue" Command="{Binding ExcuteCommand}" CommandParameter="Format"/>
            </syncfusion:SfRibbonBar>
            <syncfusion:SfRibbonBar>
                <syncfusion:SfDropDownButton SizeMode="Large" Label="Find / Replace" Width="200" FontWeight="Light" FontIconSize="20" x:Name="findreplacebutton" FontIcon="m"   Foreground="DarkOrange" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Find what:" Foreground="Black" Margin="20,2,20,5" FontWeight="Light" FontSize="16"/>
                        <TextBox x:Name="findtextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="300" FontSize="16"  FontWeight="Light" TextChanged="findtextbox_TextChanged"/>
                        <TextBlock Text="Replaec with:" Foreground="Black" Margin="20,20,20,5" FontWeight="Light" FontSize="16"/>
                        <TextBox x:Name="replacetextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="300" FontSize="16"   FontWeight="Light" TextChanged="findtextbox_TextChanged"/>
                        <StackPanel Margin="15,15,15,15" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="findbutton" IsEnabled="False" Content="Find" Foreground="Black" HorizontalAlignment="Right" Width="92" Margin="8" FontSize="16" FontWeight="Light" Click="findbutton_Click"/>
                            <Button x:Name="replacebutton" IsEnabled="False" Content="Replace" Foreground="Black" HorizontalAlignment="Right" Width="92" Margin="8" FontSize="16" FontWeight="Light" Click="replacebutton_Click"/>
                                <Button x:Name="replaceallbutton" IsEnabled="False" Content="Replace All" Foreground="Black" HorizontalAlignment="Right" Width="92" Margin="8" FontSize="16" FontWeight="Light" Click="replacebutton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </syncfusion:SfDropDownButton>
                <syncfusion:SfDropDownButton Header="Tags" SizeMode="Large" FontWeight="Light" FontIconSize="15" FontIcon="q" Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  x:Name="tagButton" >
                    <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="55"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Margin="15,10" Text="E" FontSize="22" Foreground="Blue" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                        <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Important" FontSize="18"/>
                                    </Grid>
                            </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="15,10" Text="Q" FontSize="22" Foreground="RosyBrown" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                <TextBlock Margin="5,10" FontWeight="Light" Grid.Column="1" Foreground="Black"  Text="Question" FontSize="18"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="15,10" Text="W" FontSize="22" Foreground="Red" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                <TextBlock Margin="5,10" FontWeight="Light" Grid.Column="1" Foreground="Black"  Text="Priority" FontSize="18"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="15,10" Text="A" FontSize="22" Foreground="Brown" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Address" FontSize="18"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="55"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Margin="15,10" Text="P" FontSize="22" Foreground="DarkMagenta" FontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"/>
                                <TextBlock Margin="5,10" FontWeight="Light"  Grid.Column="1" Foreground="Black"  Text="Phone Number" FontSize="18"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </syncfusion:SfDropDownButton>
            </syncfusion:SfRibbonBar>
        </syncfusion:SfRibbonTab>
        <syncfusion:SfRibbonTab Caption="Insert" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton  SizeMode="Large" Width="105" FontWeight="Light" Label="Table"  FontIconSize="18" x:Name="tablebutton" FontIcon="T"  Foreground="BlueViolet" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert Table"/>
                    <syncfusion:SfRibbonButton SizeMode="Large" Width="90" FontWeight="Light" Label="File"  FontIconSize="18" x:Name="filebutton" FontIcon="f"  Foreground="Plum" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert File"/>
                    <syncfusion:SfRibbonMenu SizeMode="Large" Width="135" FontWeight="Light" Label="Picture"  FontIconSize="18" syncfusion:RibbonCommandManager.SynchronizedItem="Pictures" Header="Insert Picture" FontIcon="p"  Foreground="DarkSlateBlue" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Insert Picture" >
                    <syncfusion:SfRibbonMenu.ToolTip>
                        <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                            <TextBlock Text="Inserts a Picture" FontSize="15" Margin="0 5 0 5"/>
                            <TextBlock Margin="0 5 0 15" Text="Inserts a Picture to your presentation."/>
                        </StackPanel>
                    </syncfusion:SfRibbonMenu.ToolTip>
                    <syncfusion:SfRibbonMenuItem >
                        <syncfusion:SfRibbonMenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/1.png" Margin="5"/>
                                <TextBlock Text="Library" VerticalAlignment="Center" Margin="5 0 0 0"/>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Header>
                        <syncfusion:SfRibbonMenuItem.Content>
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Margin="15 10">
                                    <TextBlock Text="Library" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="90 0 0 0" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding Pictures}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                <Image Height="45" Width="45" Source="{Binding}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                            </VariableSizedWrapGrid>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Content>
                    </syncfusion:SfRibbonMenuItem>
                    <syncfusion:SfRibbonMenuItem >
                        <syncfusion:SfRibbonMenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/3.png" Margin="5"/>
                                <TextBlock Text="Camera Roll" VerticalAlignment="Center" Margin="5 0 0 0"/>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Header>
                        <syncfusion:SfRibbonMenuItem.Content>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="15 10">
                                    <TextBlock Text="Camera Roll" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="90 0 0 0"/>
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding Pictures}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                <Image Height="45" Width="45" Source="{Binding}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                            </VariableSizedWrapGrid>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Content>
                    </syncfusion:SfRibbonMenuItem>
                    <syncfusion:SfRibbonMenuItem >
                        <syncfusion:SfRibbonMenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                    <Image Height="40" Width="45" Source="ms-appx:///Ribbon/Assets/Pictures/2.png" Margin="5"/>
                                <TextBlock Text="Online pictures" VerticalAlignment="Center" Margin="5 0 0 0"/>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Header>
                        <syncfusion:SfRibbonMenuItem.Content>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Margin="15 10">
                                    <TextBlock Text="Online pictures" HorizontalAlignment="Left"></TextBlock>
                                    <TextBlock Text="16 photos" HorizontalAlignment="Right" Margin="76 0 0 0"/>
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding Pictures}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Height="46" Width="46" BorderBrush="DarkGray" BorderThickness="1">
                                                <Image Height="45" Width="45" Source="{Binding}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VariableSizedWrapGrid ItemHeight="55" ItemWidth="55" Width="220" Orientation="Horizontal">
                                            </VariableSizedWrapGrid>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </syncfusion:SfRibbonMenuItem.Content>
                    </syncfusion:SfRibbonMenuItem>
                </syncfusion:SfRibbonMenu>

                <syncfusion:SfDropDownButton SizeMode="Large" Width="95" FontWeight="Light" Label="Link"  FontIconSize="18" x:Name="linkbutton" FontIcon="H"   Foreground="DarkOrange" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Text to display" Foreground="Black" Margin="20,2,20,5" FontWeight="Light" FontSize="16"/>
                        <TextBox x:Name="displaytextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="300" FontSize="16"  FontWeight="Light" TextChanged="displaytextbox_TextChanged"/>
                        <TextBlock Text="Address" Foreground="Black" Margin="20,20,20,5" FontWeight="Light" FontSize="16"/>
                        <TextBox x:Name="addresstextbox" Foreground="Black" Margin="20,2,20,5" BorderThickness="0.5" Width="300" FontSize="16"   FontWeight="Light" TextChanged="displaytextbox_TextChanged"/>
                            <Button x:Name="linknsertbutton" IsEnabled="False" Content="Insert" Foreground="Black" HorizontalAlignment="Right" Width="90" Margin="20,15,20,15" FontSize="16" FontWeight="Light"  Command="{Binding ExcuteCommand}" CommandParameter="Link" />
                    </StackPanel>
                </syncfusion:SfDropDownButton>
                <syncfusion:SfRibbonGallery SizeMode="Large" Width="135" FontWeight="Light" Label="Shapes" Header="Shapes" FontIconSize="18" FontIcon="." FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="DarkRed" >
                    <syncfusion:SfRibbonGalleryGroup Header="Cards" Foreground="DarkGreen" ItemsSource="hbjz">
                        <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                            <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes" Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                    </syncfusion:SfRibbonGalleryGroup>
                    <syncfusion:SfRibbonGalleryGroup Header="Arrows" ItemsSource="lmnopqrstuvw" Foreground="DarkBlue">
                        <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                            <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes"  Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                    </syncfusion:SfRibbonGalleryGroup>
                    <syncfusion:SfRibbonGalleryGroup Header="Others" Foreground="DeepPink" ItemsSource="ABDEFGHIKLMNOPQRSTUVWXYZ">
                        <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                            <DataTemplate>
                                    <syncfusion:SfRibbonButton FontIcon="{Binding}" SizeMode="ExtraSmall"  FontIconSize="25" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/Shapes.ttf#Shapes" Command="{Binding ExcuteCommand}" CommandParameter="Shapes"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                    </syncfusion:SfRibbonGalleryGroup>
                </syncfusion:SfRibbonGallery>
            </syncfusion:SfRibbonBar>
        </syncfusion:SfRibbonTab>
        <syncfusion:SfRibbonTab Caption="Draw" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
        <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="cursorbutton" FontIcon="x"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Cursor"/>
                    <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="selectionbutton" FontIcon="y"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Eraser "/>
                    <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="eraserbutton" FontIcon="z"  Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Selection"/>
                    <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="pencilbutton" FontIcon="4"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Pencil"/>
                    <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="budgetbutton" FontIcon="3"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Budget"/>
                    <syncfusion:SfRibbonButton SizeMode="ExtraSmall" FontIconSize="20" x:Name="brushbutton" FontIcon="1"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Pick Brush"/>
              
            </syncfusion:SfRibbonBar>
            <syncfusion:SfRibbonBar>
                <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="Redbutton" FontIcon="6"  Foreground="Red" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  Click="Redbutton_Click"/>
                <syncfusion:SfRibbonButton  SizeMode="ExtraSmall" FontIconSize="20" x:Name="orangebutton" FontIcon="6"  Foreground="Orange" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Click="Redbutton_Click"/>
                <syncfusion:SfRibbonButton SizeMode="ExtraSmall" FontIconSize="20" x:Name="greenbutton" FontIcon="6"  Foreground="Green" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Click="Redbutton_Click"/>
                <syncfusion:SfRibbonButton SizeMode="ExtraSmall" FontIconSize="20" x:Name="bluebutton" FontIcon="6"  Foreground="Blue" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Click="Redbutton_Click"/>
                <syncfusion:SfDropDownButton Header="Colors" SizeMode="Large" FontWeight="Light" FontIconSize="24" FontIcon="2" Foreground="Black" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons"  x:Name="colorsButton" >
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Button Height="40" Width=" 40" Margin="10,10,2,2" Background="DarkRed" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,10,2,2" Background="Brown" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,10,2,2" Background="DarkOrange" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,10,10,2" Background="Yellow" Click="Button_Click"/>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Button Height="40" Width=" 40" Margin="10,2,2,2" Background="LightGreen" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,2" Background="DarkGreen" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,2" Background="BlueViolet" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,10,2" Background="SkyBlue" Click="Button_Click"/>
                            </StackPanel>
                            <StackPanel Grid.Row="2" Orientation="Horizontal">
                                <Button Height="40" Width=" 40" Margin="10,2,2,2" Background="DarkBlue" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,2" Background="Violet" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,2" Background="Pink" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,10,2" Background="RosyBrown" Click="Button_Click"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <Button Height="40" Width=" 40" Margin="10,2,2,10" Background="Black" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,10" Background="DarkGray" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,2,10" Background="LightGray" Click="Button_Click"/>
                                <Button Height="40" Width=" 40" Margin="2,2,10,10" Background="White"  Click="Button_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </syncfusion:SfDropDownButton>
            </syncfusion:SfRibbonBar>
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonButton SizeMode="Small" FontIconSize="20" x:Name="clearbutton" FontIcon="Z"  Foreground="Blue" Label="Clean" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Clean Canvas"/>
                    <syncfusion:SfRibbonButton SizeMode="Small" FontIconSize="20" x:Name="exportbutton" FontIcon="Y"  Foreground="Blue" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Command="{Binding ExcuteCommand}" CommandParameter="Export"/>
            </syncfusion:SfRibbonBar>
        </syncfusion:SfRibbonTab>
        <syncfusion:SfRibbonTab Caption="Options" Background="{StaticResource ContentBackgroundColor}" SelectedForeground="{StaticResource ContentForegroundColor}">
            <syncfusion:SfRibbonBar>
                    <syncfusion:SfRibbonGallery syncfusion:RibbonCommandManager.SynchronizedItem="Accent Colors" x:Name="colorgroup" SizeMode="ExtraSmall" Header="Theme Colors" FontIconSize="25" FontIcon="o" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Foreground="Black" >
                    <syncfusion:SfRibbonGalleryGroup Header="Theme Colors" Foreground="Black" FontWeight="Normal" ItemsSource="{Binding FontColors}">
                        <syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                            <DataTemplate>
                                <Button Background="{Binding}" Margin="3"   Width="40" Height="40" Click="Button_Click_1"/>
                            </DataTemplate>
                        </syncfusion:SfRibbonGalleryGroup.ItemTemplate>
                    </syncfusion:SfRibbonGalleryGroup>
                </syncfusion:SfRibbonGallery>

                <syncfusion:SfRibbonToggleButton SizeMode="ExtraSmall"  FontIconSize="20"  x:Name="collapsebutton"   FontIcon="G" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Click="collapsebutton_Click" Foreground="Black"/>
                <syncfusion:SfRibbonToggleButton SizeMode="ExtraSmall" FontIconSize="20"   x:Name="openbackstagebutton"  FontIcon=","  FontIconFontFamily="ms-appx:///Ribbon/FontIcons/RibbonIcons.ttf#RibbonIcons" Click="openbackstagebutton_Click"  Foreground="Black" />
                <TextBox Width="200" Text="{Binding ElementName=mainribbon, Path=Title,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Margin="5" Height="20" />
            </syncfusion:SfRibbonBar>
        </syncfusion:SfRibbonTab>
        <syncfusion:SfRibbon.BackStage  >
                <syncfusion:SfBackstage  x:Name="mainbackstage" Background="{Binding ElementName=mainribbon , Path=AccentBrush}" >
                    <syncfusion:SfBackStageTabItem FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons"  Header="New" FontIconSize="15" Foreground="White" FontIcon="1" >
                    <ContentControl>
                        <local:NewView Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}"/>
                    </ContentControl>
                </syncfusion:SfBackStageTabItem>
                <syncfusion:SfBackStageTabItem Header="Save" FontIcon="2" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" >
                    <ContentControl>
                        <local:SaveView Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}"/>
                    </ContentControl>
                </syncfusion:SfBackStageTabItem>
                <syncfusion:SfBackStageButton Content="Info" FontIcon="3" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" Click="SfBackStageButton_Click_1" />
                <syncfusion:SfBackStageTabItem Header="History" FontIcon="9" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" >
                    <ContentControl>
                        <local:HistoryView Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}"/>
                    </ContentControl>
                </syncfusion:SfBackStageTabItem>
                <syncfusion:SfBackStageTabItem Header="Share" FontIcon="4" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" >
                    <ContentControl>
                        <local:ShareView Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}"/>
                    </ContentControl>
                </syncfusion:SfBackStageTabItem>
                    <syncfusion:SfBackStageButton Content="Print" FontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons"  FontIcon="5" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" Click="SfBackStageButton_Click" />
                <syncfusion:SfBackStageButton Content="Setting" FontIcon="6" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" Click="SfBackStageButton_Click_3"/>
                <syncfusion:SfBackStageTabItem x:Name="userinfo" Header="User" FontIcon="8" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" >
                    <ContentControl>
                        <local:UserView x:Name="userviewitem" Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}"/>
                    </ContentControl>
                </syncfusion:SfBackStageTabItem>
                <syncfusion:SfBackStageButton Content="Exit" FontIcon="7" FontIconFontFamily="ms-appx:///Ribbon/FontIcons/BackStageIcons.ttf#BackStageIcons" Click="SfBackStageButton_Click_2" />
            </syncfusion:SfBackstage>
        </syncfusion:SfRibbon.BackStage>
            <syncfusion:SfRibbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar/>
            </syncfusion:SfRibbon.QuickAccessToolBar>
        </syncfusion:SfRibbon>
        <Grid Grid.Row="1" Background="{Binding ElementName=mainribbon, Path=AccentBrush}" Opacity="0.1">
        </Grid>
        <Grid Grid.Row="1" Margin="40" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Margin="5,10,0,0" Source="{Binding  ElementName=userviewitem, Path=SelectionImage}" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
            <TextBlock Text="About Me" Grid.Column="1"  FontSize="30" Margin="10" Foreground="{Binding ElementName=mainribbon, Path=AccentBrush}" />
            <RichEditBox Margin="5,60,0,0" Background="White" FontSize="18" Grid.Column="1" x:Name="RichTextContent" Grid.Row="1" BorderThickness="0" >
            </RichEditBox>
        </Grid>
    </Grid>
    
</Page>
