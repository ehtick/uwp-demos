<UserControl
    x:Class="ScheduleUWP_Samples.Localization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScheduleUWP_Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:syncfusion="using:Syncfusion.UI.Xaml.Schedule"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <syncfusion:SfSchedule  CurrentDateBackground="Blue" ScheduleType="Week" x:Name="schedule"/>
    </Grid>
</UserControl>
