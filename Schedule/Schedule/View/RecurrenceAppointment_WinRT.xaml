<common:SampleLayout
    x:Class="ScheduleUWP_Samples.RecurrenceAppointment_WinRT"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScheduleUWP_Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:syncfusion="using:Syncfusion.UI.Xaml.Schedule"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:common="using:Common"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <common:SampleLayout.Sample>
        <ContentControl>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="headerText" FontSize="30" FontWeight="Normal"  Margin="30,0,0,0" HorizontalAlignment="Left" Foreground="Gray" />
                <syncfusion:SfSchedule x:Name="Schedule" Margin="0,0,0,0" WorkEndHour="18" WorkStartHour="9" TimeInterval="OneHour"
                               IsHighLightWorkingHours="True" Grid.Row="1" ScheduleType="Month" Background="White" />

            </Grid>
        </ContentControl>
    </common:SampleLayout.Sample>
 
</common:SampleLayout>
