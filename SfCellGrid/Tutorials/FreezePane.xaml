<Layout:SampleLayout x:Class="CellGridSamples.FreezePane"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Layout="using:Common"
                     xmlns:cellgrid="using:Syncfusion.UI.Xaml.CellGrid"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d">
    <Layout:SampleLayout.Sample>
        <cellgrid:SfCellGrid x:Name="cellGrid" />
    </Layout:SampleLayout.Sample>
    <Layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Margin="5">
                <TextBlock Margin="10,13,5,5"
                           FontWeight="Bold"
                           Text="Freeze Panes Options:" />
                <Button x:Name="FreezePanes"
                        Width="150"
                        Height="25"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Click="FreezePane_Click"
                        Content="Freeze Pane"
                        Padding="0"
                        ToolTipService.ToolTip="Freeze Panes" />
                <Button x:Name="FreezeTopRow"
                        Width="150"
                        Height="25"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Click="FreezeTopRow_Click"
                        Content="Freeze Top Row"
                        Padding="0"
                        ToolTipService.ToolTip="Freeze Top Row" />
                <Button x:Name="FreezeFirstColumn"
                        Width="150"
                        Height="25"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Click="FreezeFirstColumn_Click"
                        Content="Freeze First Column"
                        Padding="0"
                        ToolTipService.ToolTip="Freeze First Column" />
            </StackPanel>
        </ContentControl>
    </Layout:SampleLayout.Setting>
</Layout:SampleLayout>
