                     mc:Ignorable="d">

    <Grid x:Name="parentGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <syncfusion:SfCellGrid x:Name="grid" />
    </Grid>
</Layout:SampleLayout>
