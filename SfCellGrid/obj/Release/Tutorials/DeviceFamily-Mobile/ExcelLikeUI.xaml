<Layout:SampleLayout x:Class="CellGridSamples.ExcelLikeUI"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:Layout="using:Common"
                     xmlns:Syncfusion="using:Syncfusion.UI.Xaml.Controls.SfRibbon"
                     xmlns:SyncfusionTools="using:Syncfusion.UI.Xaml.Controls.Navigation"
                     xmlns:cellgrid="using:Syncfusion.UI.Xaml.CellGrid"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="using:tabcontrol"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:media="using:Syncfusion.UI.Xaml.Controls.Media"
                     mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Syncfusion:SfRibbonPage>
            <Grid>
                <Syncfusion:SfRibbon x:ConnectionId='1' Name="ribbon"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch">
                    <Syncfusion:SfRibbon.BackStage>
                        <Syncfusion:SfBackstage>
                            <Syncfusion:SfBackStageButton x:ConnectionId='2' x:Name="NewButton"
                                                                                 
                                                          Content="New" />
                            <Syncfusion:SfBackStageButton x:ConnectionId='3' x:Name="OpenButton"
                                                                                  
                                                          Content="Open" />
                        </Syncfusion:SfBackstage>
                    </Syncfusion:SfRibbon.BackStage>
                    <Syncfusion:SfRibbonTab Header="Home">
                        <Syncfusion:SfRibbonBar SeparatorBrush="Transparent">
                            <Syncfusion:SfRibbonButton x:ConnectionId='11' Width="105"
                                                                         
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/bold.png"
                                                       Label="Bold"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='12' Width="105"
                                                                           
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/Italic.png"
                                                       Label="Italic"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton Width="105"
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/Underline.png"
                                                       Label="UnderLine"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfSplitButton Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/BottomBorder.png" Label="Borders">
                                <StackPanel Width="310"
                                            Height="50"
                                            Orientation="Horizontal">
                                    <Syncfusion:SfRibbonButton x:ConnectionId='36' Width="75"
                                                               Height="50"
                                                                                         
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/BottomBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='37' Width="75"
                                                               Height="50"
                                                                                     
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/TopBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='38' Width="75"
                                                               Height="50"
                                                                                      
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/LeftBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='39' Width="75"
                                                               Height="50"
                                                                                       
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/RightBorder.png"
                                                               SizeMode="ExtraSmall" />
                                </StackPanel>
                                <StackPanel Width="310" Orientation="Horizontal">
                                    <Syncfusion:SfRibbonButton x:ConnectionId='32' Width="75"
                                                               Height="50"
                                                                                     
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/all-border.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='33' Width="75"
                                                               Height="50"
                                                                                         
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/OutSideBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='34' Width="75"
                                                               Height="50"
                                                                                     
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/ThickBoxBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='35' Width="75"
                                                               Height="50"
                                                                                        
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/ThickBottomBorder.png"
                                                               SizeMode="ExtraSmall" />
                                </StackPanel>
                                <StackPanel Width="310" Orientation="Horizontal">
                                    <Syncfusion:SfRibbonButton x:ConnectionId='30' Width="75"
                                                               Height="50"
                                                                                         
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/TopAndBottomBorder.png"
                                                               SizeMode="ExtraSmall" />
                                    <Syncfusion:SfRibbonButton x:ConnectionId='31' Width="75"
                                                               Height="50"
                                                                                              
                                                               Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/TopAndThickBottomBorder.png"
                                                               SizeMode="ExtraSmall" />
                                </StackPanel>
                                <Syncfusion:SfRibbonButton x:ConnectionId='29' Height="50"
                                                                                
                                                           Content="Clear All"
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/NoBorder.png"
                                                           SizeMode="Large" />
                            </Syncfusion:SfSplitButton>
                            <Syncfusion:SfDropDownButton x:ConnectionId='13' x:Name="backgcolorpicker"
                                                         Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/fillcolor.png"
                                                         IsTabStop="False"
                                                         Label="Fill Color">
                                <media:SfColorPicker x:ConnectionId='28' Name="backgroundcolor" Background="White" />
                            </Syncfusion:SfDropDownButton>
                            <Syncfusion:SfDropDownButton x:ConnectionId='14' x:Name="forecolorpicker"
                                                         Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/fontcolor.png"
                                                         IsTabStop="False"
                                                         Label="Font Color">
                                <media:SfColorPicker x:ConnectionId='27' Name="foregroundcolor" Background="White" />
                            </Syncfusion:SfDropDownButton>
                            <Syncfusion:SfRibbonButton x:ConnectionId='15' Width="105"
                                                                             
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/TopAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='16' Width="105"
                                                                                        
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/MiddleAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='17' Width="105"
                                                                                
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/BottomAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='18' Width="105"
                                                                              
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/LeftAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='19' Width="105"
                                                                                          
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/CenterAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='20' Width="105"
                                                                               
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/RightAlign.png"
                                                       SizeMode="ExtraSmall" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='21' Margin="0,1"
                                                                                   
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/MergeandCenter.png"
                                                       Label="Merge and Center"
                                                       SizeMode="Large" />
                            <Syncfusion:SfRibbonButton x:ConnectionId='22'                           
                                                       Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/WrapText.Png"
                                                       Label="TextWrapping"
                                                       SizeMode="Large" />
                            <Syncfusion:SfDropDownButton Header="Insert and Delete"
                                                         Label="Insert and Delete"
                                                         SizeMode="Large">
                                <Syncfusion:SfRibbonButton x:ConnectionId='23' x:Name="Insert_InsertSheetRows"
                                                           Width="310"
                                                                            
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/insertrows.png"
                                                           Label="Insert Rows"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='24' x:Name="Insert_InsertSheetColumns"
                                                           Width="310"
                                                                               
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/insertcols.png"
                                                           Label="Insert Columns"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='25' x:Name="Delete_DeleteSheetRows"
                                                           Width="310"
                                                                            
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/deleterows.png"
                                                           Label="Delete Rows"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='26' x:Name="Delete_DeleteSheetColumns"
                                                           Width="310"
                                                                               
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/deletecols.png"
                                                           Label="Delete Column"
                                                           SizeMode="Large" />
                            </Syncfusion:SfDropDownButton>
                        </Syncfusion:SfRibbonBar>
                    </Syncfusion:SfRibbonTab>
                    <Syncfusion:SfRibbonTab Header="View">
                        <Syncfusion:SfRibbonBar SeparatorBrush="Transparent">
                            <CheckBox x:ConnectionId='10' Name="gridlines"
                                      Margin="5,0,0,0"
                                      Content="Gridlines"
                                      IsChecked="True"
                                      IsThreeState="False" />
                        </Syncfusion:SfRibbonBar>
                        <Syncfusion:SfRibbonBar SeparatorBrush="Transparent">
                            <Syncfusion:SfDropDownButton x:ConnectionId='8' x:Name="gridcolorpicker"
                                                         Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/fillcolor.png"
                                                         IsTabStop="False"
                                                         Label="Gridline Color"
                                                         SizeMode="Large">
                                <media:SfColorPicker x:ConnectionId='9' Name="gridlinecolor" Background="White" />
                            </Syncfusion:SfDropDownButton>
                        </Syncfusion:SfRibbonBar>
                        <Syncfusion:SfRibbonBar SeparatorBrush="Transparent">
                            <Syncfusion:SfDropDownButton Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/freezepanes.png"
                                                         Label="Freeze Panes"
                                                         SizeMode="Large">
                                <Syncfusion:SfRibbonButton x:ConnectionId='4' x:Name="freeze"
                                                                              
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/freezepanes.png"
                                                           Label="Freeze Panes"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='5'                     
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/freezetoprow.png"
                                                           Label="Freeze Top Rows"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='6'                          
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/freezefirstcolumn.png"
                                                           Label="Freeze First Columns"
                                                           SizeMode="Large" />
                                <Syncfusion:SfRibbonButton x:ConnectionId='7' x:Name="unfreeze"
                                                                                
                                                           Icon="ms-appx:///Syncfusion.SampleBrowser.UWP.SfCellGrid/Assets/Icons/freezepanes.png"
                                                           Label="UnFreeze Panes"
                                                           SizeMode="Large" />
                            </Syncfusion:SfDropDownButton>
                        </Syncfusion:SfRibbonBar>
                    </Syncfusion:SfRibbonTab>
                    <Syncfusion:SfRibbon.Content>
                        <local:tabs x:ConnectionId='40' x:Name="tabscontrol" Grid.Row="1" />
                    </Syncfusion:SfRibbon.Content>
                </Syncfusion:SfRibbon>
            </Grid>
        </Syncfusion:SfRibbonPage>
    </Grid>
</Layout:SampleLayout>

