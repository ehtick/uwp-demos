<UserControl x:Class="tabcontrol.tabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cellgrid="using:Syncfusion.UI.Xaml.CellGrid"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:tabcontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sync="using:Syncfusion.UI.Xaml.Controls.Navigation"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <sync:SfTabControl x:ConnectionId='1' Name="tabcontrol"
                           Background="White"
                           BorderBrush="LightGray"
                                                                           
                           TabScrollButtonVisibility="Visible"
                           TabStripPlacement="Bottom" />
    </Grid>
</UserControl>

