<layout:SampleLayout x:Class="BI.PivotGrid.CustomSummaries"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400" 
                     xmlns:pivotGrid="using:Syncfusion.UI.Xaml.PivotGrid"
                     xmlns:layout="using:Common" Header="PivotGrid">

    <layout:SampleLayout.Sample>
        <pivotGrid:SfPivotGrid x:Name="pivotGrid1" Margin="5" FreezeHeaders="True">
        </pivotGrid:SfPivotGrid>
    </layout:SampleLayout.Sample>
    
    <layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Width="300">
                <StackPanel Margin="10 7">
                    <CheckBox x:Name="chkBoxCustom" Margin="10 7" Content="Custom Summary" IsChecked="True" Click="chkBoxCustom_Click"/>
                    <CheckBox x:Name="chkBoxDiscrete" Margin="10 7" Content="Display if Discrete Values" IsChecked="True" Click="chkBoxDiscrete_Click"/>
                    <ComboBox x:Name="cmbBoxPadString" Margin="10 7" SelectedIndex="0" HorizontalAlignment="Stretch"
                              SelectionChanged="cmbBoxPadString_SelectionChanged">
                        <ComboBoxItem>***</ComboBoxItem>
                        <ComboBoxItem>999</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </layout:SampleLayout.Setting>
</layout:SampleLayout>
