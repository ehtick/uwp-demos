<layout:SampleLayout x:Class="BI.PivotGrid.NamedSets"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:pivotGrid="using:Syncfusion.UI.Xaml.PivotGrid"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d" xmlns:layout="using:Common" Header="PivotGrid">

    <layout:SampleLayout.Sample>
        <ContentControl>
            <Grid>
                <pivotGrid:SfPivotGrid x:Name="pivotGrid" Margin="5" HorizontalAlignment="Left" ShowValueCellToolTip="True" ShowHeaderCellsToolTip="True"/>
            </Grid>
        </ContentControl>
    </layout:SampleLayout.Sample>
</layout:SampleLayout>