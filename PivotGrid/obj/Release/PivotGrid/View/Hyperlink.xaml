<layout:SampleLayout x:Class="BI.PivotGrid.Hyperlink"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     mc:Ignorable="d"  xmlns:pivotGrid="using:Syncfusion.UI.Xaml.PivotGrid"
                     xmlns:layout="using:Common" Header="PivotGrid">

    <layout:SampleLayout.Sample>
        <ContentControl>
            <Grid>
                <pivotGrid:SfPivotGrid x:ConnectionId='7' x:Name="pivotGrid" Margin="5" ShowHeaderCellsToolTip="True"/>
            </Grid>
        </ContentControl>
    </layout:SampleLayout.Sample>

    <layout:SampleLayout.Setting>
        <ContentControl>
            <StackPanel Width="300">
                <StackPanel Margin="10 7">
                    <CheckBox x:ConnectionId='8' Name="chkEnableColumnHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Column Header Hyperlink" 
                                                                                                                                 />
                    <CheckBox x:ConnectionId='9' Name="chkEnableRowHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Row Header Hyperlink" 
                                                                                                                           />
                    <CheckBox x:ConnectionId='10' Name="chkEnableSummaryColumnHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Summary Column Hyperlink" 
                                                                                                                                               />
                    <CheckBox x:ConnectionId='11' Name="chkEnableSummaryRowHeaderHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Summary Row Hyperlink" 
                                                                                                                                         />
                    <CheckBox x:ConnectionId='12' Name="chkEnableValueCellsHyperlink" Margin="10 7" FontFamily="Segoe UI" FontSize="12" Content="Enable Value Cells Hyperlink" 
                                                                                                                             />
                </StackPanel>
            </StackPanel>
        </ContentControl>
    </layout:SampleLayout.Setting>
</layout:SampleLayout>

