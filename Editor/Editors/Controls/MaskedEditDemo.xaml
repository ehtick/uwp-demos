                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Margin="10" Text="Name" Grid.Row="1"/>
                    <syncfusion:SfMaskedEdit Grid.Row="2" Margin="10 5" x:Name="name" Height="35" Width="380" HorizontalAlignment="Left"
                                     Mask="[A-Za-z.\s]*" MaskType="RegEx" Style="{StaticResource MaskEditStyle}"
                                     Value="John Smith" ValidationMode="{Binding ValidationMode,Mode=TwoWay}"
                                     Culture="{Binding Culture,Mode=TwoWay}"/>

                    <TextBlock Margin="10" Text="Departure Time" Grid.Row="5"/>
                    <syncfusion:SfMaskedEdit Grid.Row="6" Margin="10 5" x:Name="deptime" Value="{Binding DepartureTime}"  Style="{StaticResource MaskEditStyle}" HorizontalAlignment="Left"
                                        Mask="(0[1-9]|1[0-2]):[0-5]\d:[0-5]\d (A|P)M" MaskType="RegEx" Height="35" Width="380"
                                        Culture="{Binding Culture,Mode=TwoWay}" ValidationMode="{Binding ValidationMode,Mode=TwoWay}"/>

                    <TextBlock Margin="10" Text="Amount" Grid.Row="7"/>
                    <syncfusion:SfMaskedEdit Grid.Row="8" Margin="10 5"  x:Name="amount" HorizontalAlignment="Left"  Style="{StaticResource MaskEditStyle}"
                                        Mask="$(?!0)\d,\d{3}\.\d{2}" MaskType="RegEx" Culture="{Binding Culture,Mode=TwoWay}"
                                        Value="$1,000.00" ValidationMode="{Binding ValidationMode,Mode=TwoWay}"/>

                    <TextBlock Margin="10" Text="Mail ID" Grid.Row="9"/>
                    <syncfusion:SfMaskedEdit Grid.Row="10" Margin="10 5"  Height="35" Width="380" x:Name="email" HorizontalAlignment="Left"  Style="{StaticResource MaskEditStyle}"
                                     Mask="[A-Za-z0-9._%-]+@[A-Za-z0-9]+.[A-Za-z]{2,3}"
                                     MaskType="RegEx" Value="johnsmith@syncfusion.com"
                                     ValidationMode="{Binding ValidationMode,Mode=TwoWay}" />

                    <TextBlock Margin="10" Text="Phone" Grid.Row="11"/>
                    <syncfusion:SfMaskedEdit Grid.Row="12" Margin="10 5"  Height="35" Width="380" x:Name="Phone" HorizontalAlignment="Left"  Style="{StaticResource MaskEditStyle}"
                                     Mask="\(?\d{3}\)?-?\d{3}-\d{2}-\d{2}"
                                     MaskType="RegEx" Value="(123)456-78-90"
                                     ValidationMode="{Binding ValidationMode,Mode=TwoWay}" />
                </Grid>
            </Viewbox>
