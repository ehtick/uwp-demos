<View:SampleLayout
    x:Class="Input.Calendar.BlackOutDatesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Input.Calendar" xmlns:View="using:Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="CalendarView_Loaded"
   xmlns:syncfusion="using:Syncfusion.UI.Xaml.Controls.Input"
    d:DesignHeight="900" 
    d:DesignWidth="900">
    <View:SampleLayout.Sample>
        <ContentControl VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
    <Grid Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Viewbox Name="viewbox" MaxHeight="700" MaxWidth="500" Margin="20" >
                    <syncfusion:SfCalendar  Margin="20" Width="380" MinHeight="260"
                                   FontSize="15"  DayCellFontSize="12" 
                                 x:Name="calendar"/>
       </Viewbox>
    </Grid>
        </ContentControl>
    </View:SampleLayout.Sample>
</View:SampleLayout>
