<view:SampleLayout
    xmlns:view="using:Common"
    x:Class="Syncfusion.SampleBrowser.UWP.ReportViewer.SSRSReportDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Reports"
    xmlns:navigation="using:Syncfusion.UI.Xaml.Controls.Layout">
    
    <Grid Margin="0" Name="grd_controlPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Name="loadMessage" Grid.Column="1" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"></TextBlock>
        <syncfusion:SfReportViewer Grid.Column="1" Name="reportViewer"/>
    </Grid>
</view:SampleLayout>