<View:SampleLayout x:Class="DataGrid.PdfExporting"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:syncfusion="using:Syncfusion.UI.Xaml.Grid"
                   xmlns:View="using:Common"
                   xmlns:local="using:DataGrid"
                   mc:Ignorable="d">
    <View:SampleLayout.Resources>
        <ResourceDictionary>
            <local:CurrencyFormatConverter x:Key="currencyFormatConverter" />
        </ResourceDictionary>
    </View:SampleLayout.Resources>
    <View:SampleLayout.Sample>
        <syncfusion:SfDataGrid x:ConnectionId='11' x:Name="sfGrid" 
                           ColumnSizer="Star"
                           Margin="10,13,10,15"
                           AutoExpandGroups="True"
                           AutoGenerateColumns="False"
                           NavigationMode="Row"
                           SelectionMode="Extended"
                           ShowGroupDropArea="True">
            <syncfusion:SfDataGrid.GroupColumnDescriptions>
                <syncfusion:GroupColumnDescription ColumnName="Title" />
            </syncfusion:SfDataGrid.GroupColumnDescriptions>
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn HeaderText="Employee ID"  MappingName="EmployeeID" TextAlignment="Right"/>
                <syncfusion:GridTextColumn HeaderText="Employee Name" MappingName="Name" />
                <syncfusion:GridTextColumn MappingName="Gender" />
                <syncfusion:GridDateTimeColumn MappingName="BirthDate" FormatString="d" TextAlignment="Right"/>
                <syncfusion:GridTextColumn HeaderText="Designation" MappingName="Title" />
                <syncfusion:GridDateTimeColumn MappingName="HireDate" FormatString="d" TextAlignment="Right"/>
                <syncfusion:GridTextColumn MappingName="MaritalStatus" HeaderText="Marital Status"/>
                <syncfusion:GridNumericColumn MappingName="Salary" DisplayBinding="{Binding Salary,Converter={StaticResource currencyFormatConverter}}"  />
                <syncfusion:GridNumericColumn MappingName="SickLeaveHours" HeaderText="Sick Leave Hours"/>
            </syncfusion:SfDataGrid.Columns>

            <syncfusion:SfDataGrid.GroupSummaryRows>
                <syncfusion:GridSummaryRow Title="Total Salary : {Total}" ShowSummaryInRow="True" >
                    <syncfusion:GridSummaryRow.SummaryColumns>
                        <syncfusion:GridSummaryColumn Name="Total"
                                              Format="'{Sum:c}'"
                                              MappingName="Salary"
                                              SummaryType="DoubleAggregate" />
                    </syncfusion:GridSummaryRow.SummaryColumns>
                </syncfusion:GridSummaryRow>
            </syncfusion:SfDataGrid.GroupSummaryRows>

            <syncfusion:SfDataGrid.TableSummaryRows>
                <syncfusion:GridSummaryRow Title="Total Salary : {Tot}" ShowSummaryInRow="True" >
                    <syncfusion:GridSummaryRow.SummaryColumns>
                        <syncfusion:GridSummaryColumn Name="Tot"
                                              Format="'{Sum:c}'"
                                              MappingName="Salary"
                                              SummaryType="DoubleAggregate" />
                    </syncfusion:GridSummaryRow.SummaryColumns>
                </syncfusion:GridSummaryRow>
            </syncfusion:SfDataGrid.TableSummaryRows>


        </syncfusion:SfDataGrid>
    </View:SampleLayout.Sample>
    <View:SampleLayout.Setting>
        <UserControl>
            <StackPanel  Margin="10,10,10,10">

            <TextBlock Margin="0,5,0,0" Text="Pdf Exporting Options"/>

                <CheckBox x:ConnectionId='12' x:Name="ColumnWidth" Margin="0,5,0,0" Content="Auto Column Width" IsChecked="True"/>
                <CheckBox x:ConnectionId='13' x:Name="RowHeight"  Margin="0,5,0,0" Content="Auto Row Height" IsChecked="True"/>
                <CheckBox x:ConnectionId='14' x:Name="ExportGroup"  Margin="0,5,0,0" Content="Export Groups" IsChecked="True"/>
                <CheckBox x:ConnectionId='15' x:Name="ExportGroupSummary"  Margin="0,5,0,0" Content="Export Group Summaries" IsChecked="True"/>
                <CheckBox x:ConnectionId='16' x:Name="ExportTableSummary" Margin="0,5,0,0" Content="Export Table Summaries" IsChecked="True"/>
                <CheckBox x:ConnectionId='17' x:Name="RepeatHeader"  Margin="0,5,0,0" Content="Repeat Headers" IsChecked="True"/>
                <CheckBox x:ConnectionId='18' x:Name="FitAllColumns" Margin="0,5,0,0" Content="Fit All Columns in One Page" IsChecked="False"/>
                <TextBlock  Margin="0,5,0,0" Text="Export to pdf"/>
            <Button x:ConnectionId='19' Width="150"
             Margin="0,5,0,0"
                                       
            Content="Export to Pdf" />
                <TextBlock  Margin="0,5,0,0" Text="Export Selected items to pdf" />

            <Button x:ConnectionId='20' Width="150"
             Margin="0,5,0,0"
                                            
            Content="Export to Pdf" />
          </StackPanel>
        </UserControl>
    </View:SampleLayout.Setting>
</View:SampleLayout>

